%nav.navbar.navbar-expand-lg.navbar-light.bg-success
  %a.navbar-brand{:href => "/"} 
    = image_tag 'pikabu-555161.png', size: '20x20'
    Pikaburuby
  %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarSupportedContent", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
      %li.nav-item{class: "#{'active font-weight-bold' if current_page?(posts_path)}"}
        = link_to 'Посты', posts_path, class: 'nav-link'

      - if current_user
        %li.nav-item{class: "#{'active font-weight-bold' if current_page?(edit_user_registration_path)}"}
          = link_to edit_user_registration_path, class: 'nav-link' do
            .fa.fa-user
            = current_user.email
        %li.nav-item{class: "#{'active font-weight-bold' if current_page?(destroy_user_session_path)}"}
          = link_to destroy_user_session_path, method: :delete, class: 'nav-link' do
            .fa.fa-sign-out-alt
            Выйти
      - else
        %ul.navbar-nav
          %li.nav-item{class: "#{'active font-weight-bold' if current_page?(new_user_registration_path)}"}
            = link_to 'Регистрация', new_user_registration_path, class: 'nav-link'
          %li.nav-item{class: "#{'active font-weight-bold' if current_page?(new_user_session_path)}"}
            = link_to 'Вход', new_user_session_path, class: 'nav-link'
          /%li.nav-item{class: "#{'active font-weight-bold' if current_page?(privacy_policy_path)}"}
          /  = link_to 'Политика Конфиденциальности', privacy_policy_path, class: 'nav-link'
